datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  color     String   @default("#0000FF")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

